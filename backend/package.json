{
  "name": "grongraset-backend",
  "version": "1.0.0",
  "description": "Backend for Gröngräset Samfällighetsförening Multi-Utility Billing Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch --clear-screen=false --ignore dist/ --ignore node_modules/ --tsconfig ./tsconfig.dev.json src/index.ts",
    "dev:nodemon": "nodemon",
    "dev:debug": "tsx watch --inspect=9229 --clear-screen=false --ignore dist/ --ignore node_modules/ --tsconfig ./tsconfig.dev.json src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/prisma/seed.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "samfallighetsforening",
    "billing",
    "utilities",
    "typescript",
    "prisma"
  ],
  "author": "Gröngräset Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/puppeteer": "^5.4.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "puppeteer": "^24.15.0",
    "xlsx": "^0.18.5",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.19.9",
    "@types/xlsx": "^0.0.35",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "prisma": "^6.13.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
